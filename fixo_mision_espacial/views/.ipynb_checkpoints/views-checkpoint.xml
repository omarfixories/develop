<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="fixo_nave_view_list">
        <field name="name">fixo_mision_espacial.nave.list</field>
        <field name="model">fixo_mision_espacial.nave</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="pasajeros"/>
                <field name="descripcion"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
      
    <record model="ir.ui.view" id="fixo_nave_view_form"> 
        <field name="name">fixo_mision_espacial.nave.form</field>
        <field name="model">fixo_mision_espacial.nave</field>
        <field name="arch" type="xml">
            <form string="Course Form">
                <sheet>
                    <h1><field name="nombre"></field></h1>
                    <group>
                        <group>
                            <field name="active"></field>
                        </group>
                        <group>
                            <field name="pasajeros"></field>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripcion">
                            <field name="descripcion"></field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

