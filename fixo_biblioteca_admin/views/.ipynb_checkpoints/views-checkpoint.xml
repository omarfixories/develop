<odoo>
  <data>
         
       <record model="ir.ui.view" id="fixo_libro_view_form"> 
            <field name="name">fixo_biblioteca_admin.libro.form</field>
            <field name="model">fixo_biblioteca_admin.libro</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <h1><field name="titulo"></field></h1>
                        <group>
                            <group>
                                <field name="paginas"></field>
                            </group>
                            <group>
                                <field name="Autor"></field>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notas">
                                <field name="notas"></field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
      
       <record model="ir.ui.view" id="fixo_libro_view_search"> 
            <field name="name">fixo_biblioteca_admin.libro.search</field>
            <field name="model">fixo_biblioteca_admin.libro</field>
            <field name="arch" type="xml">
                <search>
                    <field name="titulo"></field>
                    <field name="paginas"></field>
                    <field name="Autor"></field>
                </search>
            </field>
        </record>
      
